<Page x:Class="RealEstateAgency.Pages.ChartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RealEstateAgency.Pages"
      xmlns:charts="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChartPage">

    <StackPanel>

        <ComboBox Name="cbChart" SelectedIndex="0"  Margin="5" SelectionChanged="cbChart_SelectionChanged"></ComboBox>
        <WindowsFormsHost Margin="5">
            <charts:Chart x:Name="TourChart">
                <charts:Chart.Legends>
                    <charts:Legend>
                    </charts:Legend>
                </charts:Chart.Legends>
            </charts:Chart>
        </WindowsFormsHost>
    </StackPanel>
</Page>
