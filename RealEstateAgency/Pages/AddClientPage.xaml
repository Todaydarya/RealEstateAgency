<Page x:Class="RealEstateAgency.Pages.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RealEstateAgency.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClientPage">

    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Имя"/>
        <TextBox Name="tbName" Text="{Binding FirstName}"/>
        <TextBlock Text="Фамилия"/>
        <TextBox Name="tbLastName" Text="{Binding LastName}"/>
        <TextBlock Text="Отчество"/>
        <TextBox Name="tbMiddleName" Text="{Binding Patronymic}"/>
        <TextBlock Text="Телефон"/>
        <TextBox Name="tbPhone" Text="{Binding Phone}"/>
        <Button Name="btnSave" Content="Сохранить" Click="btnSave_Click"/>
    </WrapPanel>
</Page>
